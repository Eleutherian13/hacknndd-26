# Database
MONGODB_URI=mongodb://localhost:27017/mediloon
MONGODB_DB_NAME=mediloon
REDIS_URL=redis://localhost:6379/0

# AI/ML
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=mediloon-pharmacy

# Security
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Mediloon AI Pharmacy
VERSION=1.0.0
DEBUG=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Integrations
N8N_WEBHOOK_URL=http://localhost:5678/webhook/
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/
CMS_WEBHOOK_URL=http://localhost:4000/api/sync

# Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@mediloon.com
SENDGRID_FROM_NAME=Mediloon Pharmacy

# SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Configuration
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Agent Configuration
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=1000
AGENT_MODEL=gpt-4-turbo-preview

# Prediction Configuration
PREDICTION_MIN_ORDERS=3
PREDICTION_CONFIDENCE_THRESHOLD=0.7
PREDICTION_DAYS_AHEAD=30

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_VOICE_ORDERING=true
ENABLE_PREDICTIVE_ORDERING=true
ENABLE_AUTO_PROCUREMENT=true
ENABLE_MULTI_LANGUAGE=true
SUPPORTED_LANGUAGES=en,de,ar
